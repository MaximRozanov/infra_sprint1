server {
    server_name 51.250.106.169 kittygramchick.ddnsking.com;

    location /media/ {
        alias /var/www/kittygram/media/;
    }

    location /api/ {
        proxy_pass http://127.0.0.1:8080;
        client_max_body_size 20M;
    }

    location /admin/ {
        proxy_pass http://127.0.0.1:8080;
        client_max_body_size 20M;
    }

    location / {
        root   /var/www/kittygram;
        index  index.html index.htm;
        try_files $uri /index.html;
    }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/kittygramchick.ddnsking.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/kittygramchick.ddnsking.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}





server {
    if ($host = kittygramchick.ddnsking.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    server_name 51.250.106.169 kittygramchick.ddnsking.com;
    return 404; # managed by Certbot


}
